page{
  height: 100%;
}
.wrapper{
  /* width: 100%; */
  height: 100%;
  background-size: 100% 100%;
  display: flex;
  flex-direction: column;
  padding: 0rpx 40rpx 0 40rpx;
}
.logo{
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}
.logoImage{
  width: 220rpx;
  height: 220rpx;
}
.form_group{
  /* padding: 20rpx 0; */
  border-bottom: 1px solid rgba(217,217,217,1);
  margin-top: 60rpx;
  padding: 10rpx;
}
.prefix{
  padding: 0 20rpx;
  color:rgba(217,217,217,1);
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  display: flex;
  -webkit-display:flex;
  align-items: center;
}
.flex{
  display: flex;
  flex-direction: row;
}
.hr{
  font-size: 30rpx;
  display: flex;
  align-items: center;
  margin-right: 20rpx;
  color: rgba(217,217,217,1);
} 
.verificationCode{
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(144,195,31,1);
  display: flex;
  align-items: center;
  min-width: 200rpx;
  white-space: nowrap;
}
.timing{
  min-width: 200rpx;
  white-space: nowrap;
  font-size:30rpx;
  font-family:MicrosoftYaHei;
  font-weight:400;
  display: flex;
  align-items: center;
  color: #bbbbbb;
}
.isLoading{
  color:#bbbbbb;
}
.code{
  padding-left: 10rpx;
}
.placeholder{
  color:rgba(217,217,217,1);
  font-family:PingFang-SC-Medium;
  font-weight:500;
  font-size: 30rpx;
}
.form_bottom{
  margin-top: 80rpx;
}
.form_bottom > .btn{
  background:rgba(144,195,31,1);
  border-radius:40rpx;
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(255,255,255,1);
}